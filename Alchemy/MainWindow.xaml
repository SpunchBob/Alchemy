<Window x:Class="Alchemy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Alchemy"
        mc:Ignorable="d"
        Title="Alchemy" Height="1080" Width="1600" ResizeMode="NoResize">
        <!--    Задний фон программы    -->
        <Window.Background>
        <!--    Создание градиента     -->
        <LinearGradientBrush EndPoint="1, 1" StartPoint="0, 0">
            <GradientStop Color="#CCCCFF" Offset="0"/> 
            <GradientStop Color="#6633FF" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <!--    Windows.Resources для стилей кнопок    -->
    <Window.Resources>
        <!--    Стиль Main_Menu_Button для основных кнопок    -->
        <Style x:Key="Main_Menu_Button" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="1, 1" StartPoint="0, 0">
                        <GradientStop Color="#9999FF" Offset="1"/>
                        <GradientStop Color="#6600FF" Offset="0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="#ccc"
                                BorderThickness="2, 2, 2, 2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#9999FF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#6600FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <!--    Основной Grid со всеми объектами    -->
    <Grid>
        <Button Style="{StaticResource Main_Menu_Button}" Content="Лаборатория" HorizontalAlignment="Center" Margin="0,400,0,0" VerticalAlignment="Top" Height="150" Width="450" FontSize="50">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>
        
        <Button Style="{StaticResource Main_Menu_Button}" Content="Библиотека минералов" HorizontalAlignment="Center" Margin="0,560,0,0" VerticalAlignment="Top" Height="150" Width="450" FontSize="35">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>
        
        <Button Style="{StaticResource Main_Menu_Button}" Content="Выход" HorizontalAlignment="Center" Margin="0,720,0,0" VerticalAlignment="Top" Height="150" Width="450" FontSize="50">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

        <Label Content="Alchemy" HorizontalAlignment="Center" Margin="0,236,0,0" VerticalAlignment="Top" FontSize="72" FontFamily="Comic Sans MS" FontStyle="Italic"/>
        <Image />
    </Grid>
</Window>
