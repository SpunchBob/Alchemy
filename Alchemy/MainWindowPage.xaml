<Page x:Class="Alchemy.MainWindowPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Alchemy"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1600"
      Title="MainWindowPage">
    <!--    Page.Resources для стилей кнопок    -->
    <Page.Resources>
        <Style x:Key="Main_Menu_Button" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="1, 1" StartPoint="0, 0">
                        <GradientStop Color="#70E500" Offset="1"/>
                        <GradientStop Color="#0CAB0A" Offset="0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="#ccc"
                        BorderThickness="2, 2, 2, 2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0CAB0A"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#0CDB00"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0, 0" StartPoint="1, 1">
                <GradientStop Color="#70E500" Offset="1"/>
                <GradientStop Color="#499500" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Style="{StaticResource Main_Menu_Button}" 
                Content="Лаборатория" 
                HorizontalAlignment="Center" 
                Margin="0,400,0,0" 
                VerticalAlignment="Top" 
                Height="150" 
                Width="450" 
                FontSize="50" 
                Click="LabButton_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button Style="{StaticResource Main_Menu_Button}" Content="Библиотека минералов" HorizontalAlignment="Center" Margin="0,560,0,0" VerticalAlignment="Top" Height="150" Width="450" FontSize="35">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button Style="{StaticResource Main_Menu_Button}" Content="Выход" HorizontalAlignment="Center" Margin="0,720,0,0" VerticalAlignment="Top" Height="150" Width="450" FontSize="50">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

        <Label Content="Alchemy" HorizontalAlignment="Center" Margin="0,236,0,0" VerticalAlignment="Top" FontSize="72" FontFamily="Comic Sans MS" FontStyle="Italic"/>
    </Grid>
</Page>
