<Page x:Class="Alchemy.MainMenuPAge"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Alchemy"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPAge">


    <Grid>
        <Grid.Background>
            
            <LinearGradientBrush EndPoint="1, 1" StartPoint="0, 0">
                <GradientStop Color="#CCCCFF" Offset="0"/>
                <GradientStop Color="#6633FF" Offset="1"/>
            </LinearGradientBrush>
            
        </Grid.Background>
        <Button Style="{StaticResource Main_Menu_Button}" Content="Лаборатория" HorizontalAlignment="Center" Margin="0,400,0,0" VerticalAlignment="Top" Height="150" Width="450" FontSize="50">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button Style="{StaticResource Main_Menu_Button}" Content="Библиотека минералов" HorizontalAlignment="Center" Margin="0,560,0,0" VerticalAlignment="Top" Height="150" Width="450" FontSize="35">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button Style="{StaticResource Main_Menu_Button}" Content="Выход" HorizontalAlignment="Center" Margin="0,720,0,0" VerticalAlignment="Top" Height="150" Width="450" FontSize="50">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

        <Label Content="Alchemy" HorizontalAlignment="Center" Margin="0,236,0,0" VerticalAlignment="Top" FontSize="72" FontFamily="Comic Sans MS" FontStyle="Italic"/>
        <Image />
    </Grid>
</Page>
