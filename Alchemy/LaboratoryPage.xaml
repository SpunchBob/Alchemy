<Page x:Class="Alchemy.LaboratoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Alchemy"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1600"
      Title="LaboratoryPage">

    <Grid>

        <!-- Изменение заднего фона Grid -->

        <Grid.Background>
            <LinearGradientBrush EndPoint="0, 0" StartPoint="1, 1">
                <GradientStop Color="#70E500" Offset="1"/>
                <GradientStop Color="#0CAB0A" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Label окна лаборатории -->

        <Label 
            Background="Gray" 
            HorizontalAlignment="Center" 
            Margin="0,200,0,10" 
            Height="800"
            Width="1446"
            BorderThickness="10"
            AllowDrop="True"
            Drop="Canvas_Drop"
            DragOver="Canvas_Drag"
            >
            <Label.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="60"/>
                </Style>
            </Label.Resources>
            <Label.BorderBrush>
                <LinearGradientBrush EndPoint="1, 1" StartPoint="0, 0">
                    <GradientStop Color="#70E500" Offset="1"/>
                    <GradientStop Color="#0CAB0A" Offset="0"/>
                </LinearGradientBrush>
            </Label.BorderBrush>
        </Label>

        <Label 
            Background="LightGray"  
            Height="150"
            Width="1446"
            BorderThickness="10"
            Margin="0, 10, 0, 830"
            >
            <Label.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="60"/>
                </Style>
            </Label.Resources>
            <Label.BorderBrush>
                <LinearGradientBrush EndPoint="1, 1" StartPoint="0, 0">
                    <GradientStop Color="#70E500" Offset="1"/>
                    <GradientStop Color="#0CAB0A" Offset="0"/>
                </LinearGradientBrush>
            </Label.BorderBrush>

            <Grid x:Name="MainPanelGrid" Width="1446" Height="150">
            </Grid>

        </Label>

        <Canvas
            x:Name="TargetCanvas"
            HorizontalAlignment="Center"
            Margin="0,55,0,45"
            Width="1446"
            AllowDrop="True"
            Drop="Canvas_Drop"
            DragOver="Canvas_Drag"
            />

    </Grid>
</Page>